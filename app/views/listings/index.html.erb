<%= search_form_for @q, :url => search_listings_path,
                        :html => {:method => :post, :class => "form-wrapper"} do |f| %>
  <%= f.text_field :name_cont,  :id => "search", :placeholder => "Search" %>
  
  <%= f.submit nil, { :id => "submit"} %>
  <% if @zip %>
    <%= f.text_field :zip, :id => "search-zip", :value => @zip %>
  <% else %>
    <%= f.text_field :zip, :id => "search-zip", :placeholder => "Zip" %>
  <% end %>
<% end %>
<% @listings.each do |listing| %>
  <%= listing.name %>
  <%= listing.body %>
  <%= listing.seller_email %>
  <%= listing.zip %>
  <%= listing.tags.collect(&:name) %>
<% end %>