* {
  font-family: 'Lato';
}

body {
  /*background-color: #dcfa70;*/
  background: url("backgroundwithlogo.jpg") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

h1 {
  font-weight: 700italic;
}

.subline h4 {
  font-weight: 300;
  color: #6b6b6b;
}

.centered {
  display: block;
  margin: 0 auto;
}

.search-bar {
  width: 50%;
}

.header {
  width: 795px;
  text-shadow: 2px 2px grey;
  color: #FFAD33;
}

.header h1 {
  position: relative;
  padding: 1cm;
  font-size:120px;
  line-height:120px;
}

.form-wrapper {
  width: 450px;
  padding: 8px;
  margin: 100px auto;
  overflow: hidden;
  border-width: 1px;
  border-style: solid;
  border-color: #dedede #bababa #aaa #bababa;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  border-radius: 10px;    
  background-color: #f6f6f6;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#f6f6f6), to(#eae8e8)); 
  background-image: -webkit-linear-gradient(top, #f6f6f6, #eae8e8);
  background-image: -moz-linear-gradient(top, #f6f6f6, #eae8e8);
  background-image: -ms-linear-gradient(top, #f6f6f6, #eae8e8);
  background-image: -o-linear-gradient(top, #f6f6f6, #eae8e8);
  background-image: linear-gradient(top, #f6f6f6, #eae8e8);
}

.form-wrapper #search {
  width: 230px;
  height: 20px;
  padding: 10px 5px;
  float: left;    
  font-size: 14px;
  border: 1px solid #ccc;
  -moz-box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  -webkit-box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;      
}

.form-wrapper #search-zip {
  width: 70px;
  height: 20px;
  padding: 10px 5px;
  margin-left: 10px;
  float: left;    
  font-size: 14px;
  border: 1px solid #ccc;
  -moz-box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  -webkit-box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;      
}

.form-wrapper #search-tags {
  width: 438px;
  float: left;    
  font-size: 14px;
  border: 1px solid #ccc;
  -moz-box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  -webkit-box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  box-shadow: 0 1px 1px #ddd inset, 0 1px 0 #fff;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px; 
  background: white;
  background-color: white;   
}

.form-wrapper #search:focus, #search-zip:focus, #search-tags:focus {
  outline: 0; 
  border-color: #aaa;
  -moz-box-shadow: 0 1px 1px #bbb inset;
  -webkit-box-shadow: 0 1px 1px #bbb inset;
  box-shadow: 0 1px 1px #bbb inset;  
}

.form-wrapper #search::-webkit-input-placeholder, #search-zip::-webkit-input-placeholder, #search-tags::-webkit-input-placeholder {
   color: #999;
}

.form-wrapper #search:-moz-placeholder, #search-zip:-moz-placeholder, #search-tags:-moz-placeholder {
  color: #999;
}

.form-wrapper #search:-ms-input-placeholder, #search-zip:-ms-input-placeholder, #search-tags:-ms-input-placeholder {
        color: #999;
} 

.form-wrapper #submit {
  float: right;    
  border: 1px solid #00748f;
  height: 42px;
  width: 100px;
  padding: 0;
  cursor: pointer;
  font-size: 15px;
  color: #fafafa;
    text-transform: uppercase;    
  background: #ffdb4d; /* Old browsers */
  background: -moz-linear-gradient(top, #ffdb4d 0%, #ffad33 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffdb4d), color-stop(100%,#ffad33)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #ffdb4d 0%,#ffad33 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #ffdb4d 0%,#ffad33 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #ffdb4d 0%,#ffad33 100%); /* IE10+ */
  background: linear-gradient(to bottom, #ffdb4d 0%,#ffad33 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffdb4d', endColorstr='#ffad33',GradientType=0 ); /* IE6-9 */  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;      
  text-shadow: 0 1px 0 rgba(0, 0 ,0, .3);
  -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #fff;
  -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #fff;
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #fff;
}
  
.form-wrapper #submit:hover,
  .form-wrapper #submit:focus {   
  background: #ffad33; /* Old browsers */
  background: -moz-linear-gradient(top, #ffad33 0%, #ffdb4d 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffad33), color-stop(100%,#ffdb4d)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #ffad33 0%,#ffdb4d 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #ffad33 0%,#ffdb4d 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #ffad33 0%,#ffdb4d 100%); /* IE10+ */
  background: linear-gradient(to bottom, #ffad33 0%,#ffdb4d 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffad33', endColorstr='#ffdb4d',GradientType=0 ); /* IE6-9 */
} 
  
.form-wrapper #submit:active {
  outline: 0;    
  -moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.5) inset;
  -webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.5) inset;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.5) inset;    
}
  
.form-wrapper #submit::-moz-focus-inner {
  border: 0;
}

.new-listing-link {
  height: 30px;
  width: 100px;
  background-color: #eee;
  display: inline;
  text-align:center; /* center horizontally */
  vertical-align:middle; 
  padding: 20px;
  margin: 0 auto;
  border-radius: 5px;
  border-width: 0px;
  border-style: solid;
  border-color: #dedede #bababa #aaa #bababa;
  -moz-box-shadow: inset 0 0 5px #888;
  -webkit-box-shadow: inset 0 0 5px#888;
  box-shadow: inner 0 0 5px #888;
}

.new-listing-link-text, .new-listing-link-text:hover {
  text-decoration: none;
  color: #000;
}

ul.tagit {
  margin-left: 0px;
  text-decoration: none;
}

.ui-helper-hidden-accessible { display:none; }

#myTags {
  background: inherit;
  max-width: 208px;
}

.new-listing-form {
  display: inline-block;
  background: url("white_paper.jpg") no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  opacity: 0.9;
}

.new-listing-form textarea, .new-listing-form input[type="text"] {
  background: inherit;
}

.submit {
  font-family: "Voltaire";
  font-size: 20px;
  color: #474747;
  background-color: transparent;
  border: none;
  cursor: pointer;
}


/******* LISTINGS ******/

.listing {
  display: inline-block;
  height: 150px;
  background: url("white_paper.jpg");
  margin-top: 20px;
  background-position: 50% 50%;
  opacity: 0.9;
}

.listings a:nth-child(2n) div {
  background-position: 0% 0%;
}
.listings a:nth-child(3n) div {
  background-position: 60% 20%;
}
.listings a:nth-child(5n) div {
  background-position: 20% 60%;
}

.listing div {
  padding: 0 20px;
}

.listing h3 {
  font-family: 'Voltaire';
}

.listings a {
  color: black;
}

.listings a:hover {
  color: black;
  text-decoration: none;
}

/********* LISTING-SHOW ********/

.listing-show {
  background: url("white_paper.jpg") no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 500px;
  margin-top: 30px;
  opacity: 0.9;
}

.listing-show div {
  padding: 50px;
}

.listing-show div h3 {
  font-family: 'Voltaire';
  font-size: 50px;
}

#listing-show-tags {
  border: none;
  padding: 0;
}

ul.tagit input[type="text"] {
  cursor: auto;
}

